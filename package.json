{
  "name": "women-of-marvel",
  "version": "1.0.0",
  "description": "A compilation of female super heroes from Marvel's universe, this application uses Angular1.5.x and node scripts."
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "concurrently \"npm run lite\" \"npm run compass\" \"npm run uglify\" \"npm run imagemin\" \"npm run copy:fonts\" \"npm run copy:html\" ",
    "clean": "rm -R dist && mkdir dist",
    "lite": "lite-server",
    "compass": "node-sass --output-style compressed -o dist/assets/css  src/assets/scss",
    "uglify": "mkdir -p dist/app && uglifyjs src/app/*.js -m -o dist/app/app.js && uglifyjs src/app/*.js -m -c -o dist/app/app.min.js",
    "imagemin": "imagemin src/assets/img/* -o dist/assets/img",
    "copy:fonts": "copy src/assets/fonts/**/*.{ttf,eot,woff,woff2,svg} ./dist/assets/fonts/",
    "copy:html": "copy {*.html,src/**/**/*.html} ./dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gdomiciano:geisy1998@github.com/gdomiciano/WomenOfMarvel.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gdomiciano/WomenOfMarvel/issues"
  },
  "homepage": "https://github.com/gdomiciano/WomenOfMarvel#readme",
  "devDependencies": {
    "compass": "^0.1.1",
    "concurrently": "^2.0.0",
    "copy": "^0.2.3",
    "imagemin-cli": "^3.0.0",
    "lite-server": "^2.2.0",
    "node-sass": "^3.8.0",
    "uglify-js": "^2.7.0"
  },
  "dependencies": {
    "angular": "^1.5.7"
  }
}
